
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-sign form-signup', role: 'form'}) do |f| %>
  <h2 class="form-signin-heading">Sign Up</h2>

  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, class: 'form-control', required: '', placeholder: 'example@example.com' %>

  <%= f.password_field :password, autocomplete: "off", class: 'form-control password', required: '', placeholder: 'password' %>

  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control password-confirmation', requreid: '', placeholder: 'password comfirm' %>

  <%= f.submit "Sign Up", class: 'btn btn-lg btn-primary btn-block' %>
  <%= render "devise/shared/links" %>

<% end %>

